toolkit = CONFIG['MOZ_WIDGET_TOOLKIT']

if toolkit == 'gtk2':
    DIRS += ['atk']
elif toolkit == 'windows':
    DIRS += ['msaa', 'windows']
elif toolkit == 'cocoa':
    DIRS += ['mac']
else:
    DIRS += ['other']


DIRS += ['base', 'generic', 'html', 'jsat', 'xpcom']

if CONFIG['MOZ_XUL']:
    DIRS += ['xul']
