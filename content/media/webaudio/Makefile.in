FAIL_ON_WARNINGS := 1

include $(DEPTH)/config/autoconf.mk

MODULE         := content
LIBRARY_NAME   := gkconwebaudio_s
LIBXUL_LIBRARY := 1

CPPSRCS := \
  AudioBuffer.cpp \
  AudioBufferSourceNode.cpp \
  AudioContext.cpp \
  AudioDestinationNode.cpp \
  AudioNode.cpp \
  AudioParam.cpp \
  AudioSourceNode.cpp \
  EnableWebAudioCheck.cpp \
  GainNode.cpp \
  $(NULL)

EXPORTS_NAMESPACES := mozilla/dom
EXPORTS_mozilla/dom := \
  AudioBuffer.h \
  AudioBufferSourceNode.h \
  AudioDestinationNode.h \
  AudioNode.h \
  AudioParam.h \
  AudioSourceNode.h \
  GainNode.h \
  $(NULL)

PARALLEL_DIRS := test

ifdef ENABLE_TESTS
TOOL_DIRS += compiledtest
endif

FORCE_STATIC_LIB := 1

include $(topsrcdir)/config/rules.mk
