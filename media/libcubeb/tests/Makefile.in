ifeq ($(OS_TARGET),Darwin)
  OS_LDFLAGS += -framework AudioUnit -framework CoreAudio
else
  ifeq ($(OS_TARGET), OpenBSD)
    OS_LIBS += -lsndio
  else
    OS_LIBS += $(MOZ_ALSA_LIBS) \
            $(MOZ_PULSEAUDIO_LIBS)
  endif
endif
