include $(DEPTH)/config/autoconf.mk

MODULE            = webvtt
LIBRARY_NAME      = webvtt

EXPORTS_NAMESPACES = webvtt

DEFINES += \
  -DWEBVTT_NO_CONFIG_H=1 \
  -DWEBVTT_STATIC=1 \
