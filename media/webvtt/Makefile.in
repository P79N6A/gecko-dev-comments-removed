EXPORTS_webvtt = \
  include/webvtt/cue.h \
  include/webvtt/error.h \
  include/webvtt/parser.h \
  include/webvtt/string.h \
  include/webvtt/util.h \
  $(NULL)

CSRCS = \
  alloc.c \
  cue.c \
  cuetext.c \
  error.c \
  lexer.c \
  parser.c \
  string.c \
  $(NULL)

